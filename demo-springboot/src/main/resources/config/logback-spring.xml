    <springProfile name="!pro">
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="ACCESS_FILE"/>
            <appender-ref ref="ERROR"/>
            <appender-ref ref="DEBUG"/>
        </root>
    </springProfile>



    <!-- 开发、测试环境、生产环境-->
